{
    "extends": "@manuth/tsconfig/recommended",
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "module": "Node16",
        "lib": [
            "ES2020"
        ],
        "paths": {
            "@manuth/*": [
                "./packages/*/src"
            ]
        },
        "plugins": [
            {
                "transform": "ts-nameof",
                "type": "raw"
            }
        ],
        "target": "ES6"
    }
}
