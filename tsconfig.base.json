{
    "extends": "@manuth/tsconfig/recommended",
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "module": "CommonJS",
        "lib": [
            "ES2020"
        ],
        "paths": {
            "@manuth/*": [
                "./packages/*"
            ]
        },
        "plugins": [
            {
                "name": "@manuth/typescript-eslint-plugin"
            },
            {
                "transform": "ts-nameof",
                "type": "raw"
            }
        ],
        "target": "ES6"
    }
}
