{
  "name": "@manuth/extended-yo-generator-test",
  "version": "4.1.0",
  "description": "Provides tools for testing generators created using `@manuth/extended-yo-generator`",
  "author": "Manuel Thalmann <m@nuth.ch>",
  "license": "MIT",
  "keywords": [
    "yo",
    "extended",
    "Testing"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "homepage": "https://github.com/manuth/ExtendedYoGenerator/tree/master/packages/extended-yo-generator-test#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manuth/ExtendedYoGenerator.git",
    "directory": "packages/extended-yo-generator-test"
  },
  "bugs": {
    "url": "https://github.com/manuth/ExtendedYoGenerator/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "rebuild": "npm run clean && npm run build",
    "watch": "npm run build -- --watch",
    "clean": "rimraf ./lib",
    "lint-base": "eslint --max-warnings 0 --ignore-pattern \"!.eslintrc.js\"",
    "lint": "npm run lint-base -- --ext .js,.jsx,.ts,.tsx ./src .eslintrc.js",
    "lint-compact": "npm run lint -- -f compact || exit 0",
    "test": "mocha",
    "prepare": "npm run rebuild"
  },
  "dependencies": {
    "@manuth/extended-yo-generator": "^4.1.0",
    "@types/yeoman-test": "^2.0.4",
    "yeoman-test": "^2.6.0"
  },
  "devDependencies": {
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.20",
    "@types/random-js": "^2.0.0",
    "mocha": "^8.0.1",
    "random-js": "^2.1.0",
    "rimraf": "^3.0.2",
    "typescript": "^3.9.6"
  }
}
