{
    "private": true,
    "name": "extended-yo-generator",
    "scripts": {
        "build": "tsc -b tsconfig.build.json",
        "rebuild": "npm run clean && npm run build",
        "watch": "npm run build -- --watch",
        "clean": "lerna run clean",
        "lint-base": "eslint --max-warnings 0 --ignore-pattern \"!.eslintrc.js\"",
        "lint": "npm run lint-base -- --ext .js,.jsx,.ts,.tsx .eslintrc.js",
        "lint-compact": "npm run lint -- -f compact || exit 0",
        "lint-all": "npm run lint && lerna run lint",
        "lint-all-compact": "npm run lint-compact && lerna run lint-compact",
        "version": "ts-node ./scripts/bumpVersion.ts",
        "prepare": "lerna bootstrap && npm run rebuild"
    },
    "devDependencies": {
        "@manuth/eslint-plugin-typescript": "^2.1.2",
        "@manuth/tsconfig": "^1.2.2",
        "@types/git-branch": "^2.0.1",
        "@types/node": "^14.0.20",
        "@types/npm-which": "^3.0.0",
        "@typescript-eslint/eslint-plugin": "^3.6.0",
        "@typescript-eslint/eslint-plugin-tslint": "^3.6.0",
        "@typescript-eslint/parser": "^3.6.0",
        "eslint": "^7.4.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-jsdoc": "^29.1.2",
        "git-branch": "^2.0.1",
        "lerna": "^3.22.1",
        "npm-which": "^3.0.1",
        "ts-node": "^8.10.2",
        "tslint": "^6.1.2",
        "typescript": "^3.9.6",
        "typescript-eslint-plugin": "^1.2.1"
    }
}
